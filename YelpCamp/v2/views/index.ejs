<%- include ('partials/header'); -%>

    <div class = "container">
        <header class = "jumbotron">
            <div class = "container">
                <h1>Welcome to YelpCamp</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class = "btn btn-primary btn-large" href = "/campgrounds/new">Add New Campground</a>
                </p>
            </div>
    </header>

    <div class="row text-center">
        <% campgrounds.forEach((camp) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src = "<%=camp.image%>">
                    <div class="caption">
                        <h4><%=camp.name%></h4>
                    </div>
                    <p>
                        <!--redirect to particular campground with that id that is generated by mongo db itself-->
                       <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% });%>
    </div>

</div>
 
<%- include ('partials/footer'); -%>